{
  "name": "realities-api",
  "version": "0.0.1",
  "description": "A backend for tribal decentralised organisations.",
  "engines": {
    "npm": "5.5.1",
    "node": "8.9.1"
  },
  "scripts": {
    "start": "concurrently --kill-others \"webpack --watch\" \"nodemon build/bundle.js\"",
    "test": "mocha",
    "build": "better-npm-run build",
    "serve": "better-npm-run serve"
  },
  "betterScripts": {
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "serve": {
      "command": "node build/bundle.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theborderland/realities.git"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/theborderland/realities/issues"
  },
  "homepage": "https://github.com/theborderland/realities#readme",
  "dependencies": {
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql-server-express": "^1.2.0",
    "graphql-tools": "^2.12.0",
    "neo4j-driver": "^1.5.1",
    "neo4j-graphql-js": "^0.1.6",
    "concurrently": "^3.5.1",
    "eslint": "^4.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.4",
    "path": "^0.12.7",
    "source-map-support": "^0.5.0",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  }
}
